/* Included libraries */

#include <stdio.h>		    /* for printf() and fprintf() */
#include <sys/socket.h>		    /* for socket(), connect(), send(), and recv() */
#include <arpa/inet.h>		    /* for sockaddr_in and inet_addr() */
#include <stdlib.h>
#include <unistd.h>
#include <string.h>
#include "bencode.c"
#include "bencode.h"

/* Constants */
#define RCVBUFSIZE 512		    /* The receive buffer size */
#define SNDBUFSIZE 512		    /* The send buffer size */
#define REPLYLEN 32

/* The main function */
int main(int argc, char *argv[])
{

    char *sourcePath;
    char *destPath;
    char *bencodedString;

    /* Get the Account Name from the command line */
    if (argc != 3) 
    {
    	printf("Incorrect number of arguments. The correct format is:\n\t sourcePath destinationPath");
    	exit(1);
    }
    sourcePath = argv[1];
    destPath = argv[2];

    printf("%s\n", sourcePath);
    printf("%s\n", destPath);

    return 0;
}

